RewriteEngine On

# üîí Bloquear acceso a cualquier archivo .php que no sea verbo HTTP
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s.*\.php\sHTTP [NC]
RewriteCond %{REQUEST_URI} !/(get|post|put|delete|patch|options|head)\.php$ [NC]
RewriteRule .* - [F]

# üîê Restringir cada archivo al m√©todo HTTP correspondiente
RewriteCond %{REQUEST_URI} /get\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !GET
RewriteRule ^.*$ - [F]

RewriteCond %{REQUEST_URI} /post\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !POST
RewriteRule ^.*$ - [F]

RewriteCond %{REQUEST_URI} /put\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !PUT
RewriteRule ^.*$ - [F]

RewriteCond %{REQUEST_URI} /delete\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !DELETE
RewriteRule ^.*$ - [F]

RewriteCond %{REQUEST_URI} /patch\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !PATCH
RewriteRule ^.*$ - [F]

RewriteCond %{REQUEST_URI} /options\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !OPTIONS
RewriteRule ^.*$ - [F]

RewriteCond %{REQUEST_URI} /head\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !HEAD
RewriteRule ^.*$ - [F]
