RewriteEngine On

# ✅ Permitir solo el index.php en la raíz
<FilesMatch "^index\.php$">
    Require all granted
</FilesMatch>

# ❌ Bloquear cualquier otro index.php en subcarpetas
<FilesMatch "^.*/index\.php$">
    Require all denied
</FilesMatch>

# 🔁 Redirigir rutas limpias al index.php raíz
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php [L]
